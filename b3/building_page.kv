
<BuildingLabel@Label>:
    font_size: '15sp'
    font_name: "font/DroidSansFallback.ttf"
    color: 0, 0, 0, 1

<BuildingButton@Button>:
    font_size: '15sp'
    font_name: "font/DroidSansFallback.ttf"

<BuildingPage>:
    #name: '_buildingpage'
    BoxLayout:
        name: 'build'
        orientation: 'vertical'
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            orientation: 'vertical'
            BoxLayout:
                size_hint: 1, .25
                BuildingLabel:
                    size_hint: .3, 1
                    text: " "*20 + u"主城"
                    #padding_x: 5
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    #color: 1, 0, 1, 1
                BuildingLabel:
                    size_hint: .3, 1
                    text: " "*20 +  u"等级"
                    #padding_x: 5
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                BuildingLabel:
                    size_hint: .4, 1
                    text: "99"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
            BoxLayout:
                size_hint: 1, .5
                BoxLayout:
                    size_hint: .75, 1
                    orientation: 'vertical'
                    BuildingLabel:
                        text: " "* 20 + u'每分钟会有等级*1人口入驻并产出等级*100资源储量'
                        text_size: self.size
                        halign: 'left'
                        valign: 'bottom'
                    BuildingLabel:
                        text: " "* 20 + u'(最低50)， 每次采集资源量为等级*5(最低3)'
                        text_size: self.size
                        halign: 'left'
                        valign: 'top'
                BoxLayout:
                    size_hint: .25, 1
                    Label:
                        size_hint: .25, 1
                    BuildingButton:
                        size_hint: .5, .5
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        text: u'升级'
                    Label:
                        size_hint: .25, 1
            BoxLayout:
                size_hint: 1, .25
                BuildingLabel:
                    size_hint: .3, 1
                    text: " " * 20 + u"升级消耗资源"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                BuildingLabel:
                    size_hint: .7, 1
                    text: " "* 20 + "9999999"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
