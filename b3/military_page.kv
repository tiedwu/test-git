
<MilitaryLabel@Label>    
    font_size: '16sp'
    font_name: "font/DroidSansFallback.ttf"
    color: 0, 0, 0, 1
<MilitaryButton@Button>    
    font_size: '16sp'
    font_name: "font/DroidSansFallback.ttf"
    #color: 0, 0, 0, 1

<MilitaryPage>:
    BoxLayout:
        orientation: 'vertical'
        #spacing_y: 30
        spacing: 5
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            orientation: 'vertical'
            size_hint: 1, .2375
            BoxLayout:
                MilitaryLabel:
                    size_hint: .2, 1
                    text: "枪兵"
                MilitaryLabel:
                    size_hint: .2, 1
                    text: "数量"
                MilitaryLabel:
                    size_hint: .6, 1
                    text: "11,947"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
            BoxLayout:
                BoxLayout:
                    size_hint: .7, 1
                    orientation: 'vertical'
                    MilitaryLabel:
                        text: u'血量5 ' + u'攻击13 ' + u'防御10 ' + u'负重3600'
                    MilitaryLabel:
                        text: "攻击时25%概率增加100%伤害"
                MilitaryButton:
                    size_hint: .2, 1
                    text: u"训练"
                Label:
                    size_hint: .1, 1
                    text: ""
            BoxLayout:
                spacing: 30
