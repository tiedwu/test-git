        orientation: 'vertical'
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            orientation: 'vertical'
            size_hint: 1, .15
            BoxLayout:
                StoreLabel:
                    size_hint: .2, 1
                    text: u"资源增产"
                StoreLabel:
                    size_hint: .2, 1
                    text: u"拥有时间"
                StoreLabel:
                    size_hint: .6, 1
                    text: "0"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
            BoxLayout:
                padding: 10, 6
                StoreLabel:
                    font_size: '13sp'
                    text: u"资源产出生产量和采集量翻倍, 1小时50水晶"
                StoreButton:
                    size_hint: .2, 1
                    text: u"购买"
                Label:
                    size_hint: .1, 1
                    text: ""
