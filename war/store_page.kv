
<StoreLabel@Label>    
    font_size: '16sp'
    font_name: "font/DroidSansFallback.ttf"
    color: 0, 0, 0, 1
<StoreButton@Button,StoreTextInput@TextInput>    
    font_size: '16sp'
    font_name: "font/DroidSansFallback.ttf"
    #color: 0, 0, 0, 1

<StorePage>:
